      "icons": [
        {
          "src": "/icons/shortcut-doacao.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/screenshot-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Página inicial do IPVONLINE"
    },
    {
      "src": "/screenshots/screenshot-mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "IPVONLINE em dispositivos móveis"
    }
  ],
  
  "prefer_related_applications": false,
  "related_applications": [],
  
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/pages/contato.html?email=%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  
  "share_target": {
    "action": "/pages/contato.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "assunto",
      "text": "mensagem",
      "url": "url"
    }
  },
  
  "permissions": [
    "notifications",
    "background-sync"
  ],
  
  "features": [
    "Cross Origin Embedder Policy",
    "Cross Origin Opener Policy"
  ],
  
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9"
